<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:src">@drawable/gym</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/title_color</item>
        <item name="android:fontFamily">@string/main_font</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="infoArea">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:paddingTop">@dimen/space_areas</item>
        <item name="android:paddingBottom">@dimen/space_areas</item>
        <item name="android:paddingLeft">@dimen/left_right_padding</item>
        <item name="android:paddingRight">@dimen/left_right_padding</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/descr_color</item>
    </style>

    <style name="scrollArea">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Define style for location icon-->
    <style name="location">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/space_areas</item>
        <item name="android:fontFamily">@string/main_font</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:drawableLeft">@drawable/location</item>
        <item name="android:drawablePadding">@dimen/drawablePadding</item>
    </style>

    <!-- Define style for phone icon-->
    <style name="phone">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/space_areas</item>
        <item name="android:fontFamily">@string/main_font</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:drawableLeft">@drawable/phone</item>
        <item name="android:drawablePadding">@dimen/drawablePadding</item>
    </style>

    <!-- Define style for fax icon-->
    <style name="fax">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/space_areas</item>
        <item name="android:fontFamily">@string/main_font</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:drawableLeft">@drawable/fax</item>
        <item name="android:drawablePadding">@dimen/drawablePadding</item>
    </style>

    <!-- Define style for mail icon-->
    <style name="mail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/main_font</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:drawableLeft">@drawable/mail</item>
        <item name="android:drawablePadding">@dimen/drawablePadding</item>
    </style>

    <style name="description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/space_areas</item>
        <item name="android:paddingBottom">@dimen/space_areas</item>
        <item name="android:paddingLeft">@dimen/left_right_padding</item>
        <item name="android:paddingRight">@dimen/left_right_padding</item>
        <item name="android:background">@color/title_color</item>
        <item name="android:fontFamily">@string/main_font</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    <!-- Palette: http://www.colorcombos.com/color-schemes/18/ColorCombo18.html-->
</resources>
